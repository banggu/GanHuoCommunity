<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <ImageView
        android:id="@+id/article_item_image_imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/article_item_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/article_item_image_imageView"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/article_item_tip_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="43人收藏 · author · 1天前"
        android:textColor="@color/colorPrimaryPray"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/article_item_image_imageView"
        android:layout_below="@+id/article_item_title_textView"/>
</RelativeLayout>