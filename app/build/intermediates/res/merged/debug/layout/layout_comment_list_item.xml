<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/commentitem_image_imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/commentitem_user_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="author"
            android:layout_toRightOf="@+id/commentitem_image_imageView"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/commentitem_type_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="校内新闻"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/commentitem_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retrofit"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/commentitem_content_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1231241231214124312413432134212433123412432141234142342141"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/commentitem_love_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_love_unfollowl"/>
            <TextView
                android:id="@+id/commentitem_comment_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_comment"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>