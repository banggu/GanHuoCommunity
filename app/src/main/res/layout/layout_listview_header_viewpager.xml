<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/page_bg"
    android:id="@+id/list_view_header_ll">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager
            android:id="@+id/hot_article_viewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tv_viewpager_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hot_article_viewpager"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="20dp"
            android:text="asdafasfasdfasdf"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="24sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_dotgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hot_article_viewpager"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"></LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hot_article"
        android:padding="15dp"
        android:background="@color/colorPrimaryWhite"/>
</LinearLayout>